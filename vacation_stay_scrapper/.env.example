# Environment Configuration for Vacation Stay Scrapper

# Data source configuration - controls whether to use real or fake data
USE_FAKE_FLIGHTS=false
USE_FAKE_STAYS=false

# External service URLs
FLIGHT_SERVICE_URL=localhost:8001

# Storage configuration - where to store vacation plans
VACATION_STORAGE=memory
# VACATION_FILE_PATH=/data/vacation_plans.json  # Only used if VACATION_STORAGE=file

# Faker configuration - settings for generated test data
FAKER_LOCALE=en_US
STAYS_PER_SEARCH=10
FLIGHTS_PER_SEARCH=5

# Application features
ENABLE_CACHING=true
ENABLE_LOGGING=true
ENABLE_METRICS=false

# Cache settings
CACHE_TTL_SECONDS=300
MAX_CACHE_SIZE=1000

# Application settings
DEBUG=false
